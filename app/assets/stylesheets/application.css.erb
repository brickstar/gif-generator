body {
  background-size: 1000px 900px;
}

.nav-links {
  font-family: sans-serif;
  text-decoration: none;
  border: 1px solid grey;
  padding: 10px;
  display: flex;
  justify-content: center;
}

img {
  display: flex;
  flex-wrap: wrap;
  height: 200px;
  width: 300px;
}

.gif-container {
  display: flex;
  flex-wrap: wrap;
}

nav {
  margin-top: 15px;
  width: 100vw;
  height: 80px;
  display: flex;
  justify-content: space-around;
}

.welcome-message {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 10px;
  border: 2px solid black;
  margin: 10px 10px 0px 10px;
  height: 800px;
  display: flex;
  background-size: 400px 600px;
  background-image: url(<%= asset_path('tulip-collage.jpg')%>);
}

.home-container {

}

.logo {
  padding-top: 10px;
  font-family: sans-serif;
  font-style: bold;
  font-size: 250px;
  color: white;
}
.logo-top {
  padding-top: 10px;
  font-family: sans-serif;
  font-style: bold;
  font-size: 300px;
  color: white;
}
